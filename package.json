{
  "name": "@advanced-rest-client/arc-scroll-threshold",
  "description": "Triggers an event when nearing the beginning or end of a scrollable element. Port of iron-scroll-threshold to LitElement",
  "version": "1.1.0",
  "license": "Apache-2.0",
  "main": "arc-scroll-threshold.js",
  "module": "index.js",
  "keywords": [
    "web-components",
    "scroll",
    "threshold"
  ],
  "authors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "contributors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/arc-scroll-threshold.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/arc-scroll-threshold/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/arc-scroll-target-mixin": "1.0.2",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^1.0.17",
    "@advanced-rest-client/eslint-config": "^1.1.4",
    "@advanced-rest-client/testing-karma-sl": "^1.1.0",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@google-web-components/google-signin": "^3.0.1",
    "@open-wc/prettier-config": "^0.1.13",
    "@open-wc/testing": "^2.4.2",
    "@open-wc/testing-karma": "^3.2.26",
    "@polymer/gen-typescript-declarations": "^1.6.2",
    "@polymer/paper-toggle-button": "^3.0.1",
    "es-dev-server": "^1.36.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "sinon": "^8.0.4",
    "webpack-merge": "^4.2.2"
  },
  "scripts": {
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "start:compatibility": "es-dev-server --app-index demo/index.html --compatibility all --node-resolve --open --watch",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:legacy": "karma start --compatibility auto --coverage",
    "test:legacy:watch": "karma start --compatibility auto --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --compatibility auto --coverage",
    "update-types": "gen-typescript-declarations --deleteExisting --outDir .",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
